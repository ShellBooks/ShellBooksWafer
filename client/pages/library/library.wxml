<!--pages/library/library.wxml-->
<view>
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000" circular="true">    
    <block wx:for="{{imgs}}" wx:key="index">    
      <swiper-item>    
        <image src="{{item.url}}" class="slide-image" mode="aspectFill"/> 
      </swiper-item>    
    </block>    
  </swiper> 
  <view class='search'>
    <input></input>
    <icon type='search'></icon>
  </view>
  <view class="books">
    <item title="新书上架" url="../addCgi/addCgi" bindmyevent="navigateTo"></item>
    <scroll-view class="scroll-view" scroll-x>
      <block wx:for="{{new_books}}" wx:key="index">
        <view bindtap="toDetails" data-bid="{{item.bid}}">
          <image src='{{item.image}}'></image>
          <text>{{item.bname}}</text>
          <text>{{item.author}}</text>
        </view>
      </block>
    </scroll-view>  
  </view>
  <view class="books">
    <item title="好书推荐"></item>
    <scroll-view class="scroll-view" scroll-x>
      <block wx:for="{{new_books}}" wx:key="index">
        <view bindtap="toDetails" data-bid="{{item.bid}}">
          <image src='{{item.image}}'></image>
          <text>{{item.bname}}</text>
          <text>{{item.author}}</text>
        </view>
      </block>
    </scroll-view>   
  </view>
</view>

