<view>
  <view class="book_details_main">
    <view class='book_details_img'></view>
    <view class='book_details_info'>
      <text class='book_details_text'>书本名称</text>
      <text class='book_details_text'>作者名字</text>
      <text class='book_details_text'>出版社</text>
    </view>
  </view>
  
  <view class="comments" wx:if="{{comments.length}}">
    <view class='comments_number'>
      <text>用户评论{{comments.length}}</text>
    </view>
    <block wx:for="{{comments}}" wx:key="index">
      <comment comment="{{item}}"></comment>
    </block>
  </view>
  <text wx:else>还没有评论哦~快来添加第一条评论吧！</text>
  
</view>

