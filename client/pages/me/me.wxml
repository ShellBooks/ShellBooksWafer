<!--pages/me/me.wxml-->
<view>
  <view class='backWall'></view>
  <view>
    <image class="userinfo-avatar" src="{{userInfo.avatar_url}}" background-size="cover"></image>
    <view class="userinfo-nickname">
      <text>{{userInfo.nickname}}</text>
      <image class='gender' src='../../images/boy.png' wx:if="{{userInfo.gender}}"></image>  
      <image class='gender' src='../../images/girl.png' wx:else></image>
      <image class='verify' src='../../images/verified.png' wx:if="{userInfo.verified"></image>
      <image  class='verify' src='../../images/unverified.png' wx:else></image>
    </view>
    <view class="info">
      <text>{{money}}贝壳</text>
      <text>{{borrow}}借书</text>
      <text>{{share}}分享</text>
    </view>
  </view>
  <view class="me_list">
    <item title="当前借书" bindtap="toBorrowList"></item>
    <line></line>
    <item title="我的收藏"></item>
    <line></line>
    <item title="实名认证" bindtap="toVerifyPage"></item>
    <line></line>
  </view>
  <view class="me_list">
    <item title="借阅记录"></item>
    <line></line>
    <item title="我的分享" bindtap="toShareList"></item>
    <line></line>
  </view>
  <view class="me_list">
    <item title="关于我们"></item>
  </view>
</view>
