/* pages/me/me.wxss */

page{
  background: #fff;
}
.backWall{
  background: #1a7bae;
  width: 100%;
  height: 200rpx; 
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
  border-radius: 50%;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
    position: relative;
    top: -100rpx;
}
.userinfo-nickname{
  margin-left: 50rpx;
  margin-right: 50rpx;
  position: relative;
}
.username{
  display: block;
  text-align: center;
  width:300rpx;
  margin: 0 auto;
  font-size: 36rpx;
}

.info{
  width: 500rpx;
  margin: 0 auto;
}
.info text{
  font-size: 32rpx;
  margin: 0 30rpx;
  color: #808080;
}
.me_list{
  width: 92%;
  margin: 20rpx auto;
  background: #fff;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border: 1px solid #fff;
  border-radius: 8rpx;
}
.gender{
  width: 24rpx;
  height: 40rpx;
  margin-left: 40rpx;
}
.verify{
  width: 36rpx;
  height: 36rpx;
  float: right;
  position: absolute;
  left: 400rpx;
  top: 14rpx;
}
.userInfo_up{
  height: 320rpx;
}
.me_admin{
  display: block;
  margin-top: 20rpx;
  text-align: center;
  color: #808080;
  font-size: 32rpx;
}

