.active_title{
  width: 92%;
  background: #fff;
  text-align: center;
  padding: 10rpx;
  margin: 20rpx auto;
  border-radius: 8rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
.active_title text{
  font-size: 30rpx;
  font-weight: bold;
}
.active_title input{
  height: 60rpx;
  /* border: 1px solid #009ed8; */
}
.active_intro{
  width: 92%;
  background: #fff;
  text-align: center;
  padding: 10rpx;
  margin: 20rpx auto;
  border-radius: 8rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
.active_intro text{
  font-size: 30rpx;
  font-weight: bold;
}
.active_intro textarea{
  width: 92%;
  margin: 0 auto;
  height: 300rpx;
  /* border: 1px solid #aaa; */
}
.active_photo{
  width: 92%;
  height: 420rpx;
  background: #fff;
  text-align: center;
  padding: 10rpx;
  margin: 20rpx auto;
  border-radius: 8rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
.active_upload text{
  font-size: 30rpx;
  font-weight: bold;
}
.isUpload text{
  font-size: 26rpx;
  color: #444;
  font-weight: 300;
}
.arrow{
  width: 30rpx;
  height: 30rpx;
  border-top: 4rpx solid #999; 
  border-right: 4rpx solid #999; 
  /* position: absolute; */
  float: right;
  margin-right: 30rpx; 
  margin-top: 25rpx;
  transform: rotate(45deg);
} 
.preview_img{
  width: 100%;
  height: 300rpx;
}
.preview_img image{
  width: 100%;
  height: 100%;
}
.upload_book_btn::after{
  border: none;
}
.bottom_btn{
  position: relative;
  top: 50rpx;
  width: 650rpx;
  height: 100rpx;
  margin: 0 auto;
  text-align: center;
  background: #009ed8;
  box-shadow: 2px 6px 10px 2px #a2d5e8; /* 水平，垂直，扩散面积，延展距离，颜色 */
}
.btn_text{
  color: #fff;
  font-size: 36rpx;
  line-height: 100rpx;
}
.btn_wrap{
  /* position: absolute; */
  bottom: 0;
  width: 100%;
  height: 200rpx;
}

