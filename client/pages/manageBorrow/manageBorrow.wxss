/* navbar 下方滑块 */
.shell-navbar_slider{
  background: #1a7bae;
  width: 50rpx; 
  height: 2px;
  bottom: 10rpx;
  border: 0.5px solid #1a7bae;
  border-radius: 999px; 
}
/* navbar 选中 item  */
.shell-bar_item_on{
   color: #1a7bae !important; 
}
/* navbar */
#weui_navbar_design{
  position: fixed;
  top: 0;
  background: #fff;
  border-bottom: 0px;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
/* navbar 文字 */
#weui_navbar_title_design{
