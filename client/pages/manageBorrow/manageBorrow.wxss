/* pages/manageBorrow/manageBorrow.wxss */
.manageBorrow{
  margin: 40rpx 20rpx;
}
.borrowImg{
  width: 30%;
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
}
.borrowImg image{
  width: 100%;
  height: 300rpx;
}
.borrowInfo{
  display: inline-block;
  vertical-align: top;
  width: 65%;
}
.borrowInfo text{
  display: block;
  font-size: 36rpx;
}
.listTitle{
  margin: 20rpx;
  display: block;
  width: 100%;
  text-align: center;
}

.borrowInfo .bookname{
  font-size: 40rpx;  
  font-weight: bold;
}