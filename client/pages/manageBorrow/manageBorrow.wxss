/* pages/manageBorrow/manageBorrow.wxss */
.manageBorrow{
  margin: 20rpx 20rpx;
  padding: 10rpx 10rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border-radius: 8rpx;

}
.borrowImg{
  width: 30%;
  height: 300rpx;
  display: inline-block;
  vertical-align: top;
}
.borrowImg image{
  width: 100%;
  height: 100%;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border-radius: 8rpx;
}
.borrowInfo{
  display: inline-block;
  vertical-align: top;
  width: 55%;
  margin-left: 50rpx;
}
.borrowInfo text{
  display: block;
  font-size: 26rpx;
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.borrowInfo .bookname{
  font-weight: bold;
  font-size: 30rpx;
}
