<!--pages/process/process.wxml-->
<view>
  <view class="book_details_main">
    <view class='book_details_img'>
      <image src='{{book_details.image}}'></image>
    </view>
    <view class='book_details_info'>
      <text class='book_details_text book_name'>{{book_details.bname}}</text>
      <text class='book_details_text'>作者：{{book_details.author}}</text>
      <!-- <text class='book_details_text'>出版社:{{book_details.publish}}</text>
      <text class='book_details_text'>定价: {{book_details.price}}元</text> -->
      <text class='book_details_text'>贝壳: {{book_details.shell}}个</text>
      <!-- <text class='book_details_text'>ISBN: {{book_details.ISBN}}</text> -->
      <!-- <view wx:if="{{book_details.borrow_date}}"> -->
        <text class='book_details_text'>借阅日期: {{book_details.borrow_date}}</text>
      <text class='book_details_text'>归还日期: {{book_details.return_date}}</text>
      <!-- </view> -->
      <view class='book_details_text' wx:if="{{book_details.rate}}">
        <text>评分:</text>
        <rate rate="{{book_details.rate}}"></rate> 
      </view>
      <text class='book_details_text' wx:else>暂无评分</text>
    </view>
  </view>
  <text class="tag">流程详情</text>
  <view class='process_info'>
    <block wx:for="{{process}}" wx:key="index">  
      <view class='item_info'>  
        <view class='time_info'>
          <text>{{item.day}}</text>
          <text>{{item.time}}</text>  
        </view>
        <view class='icon {{0==index?"in":"no_in"}}'></view>  
        <view class='operation_info'>  
          <text>{{item.info}}</text>  
        </view>  
        <view class='on'></view>  
      </view>  
    </block>  
     <view class='icon no_in'></view>   
  </view>
  <navigator url='../bookReviews/bookReviews' wx:if="{{type == 1}}">
      <button class="review_btn"  bindtap="toReview" style="background: url('../../images/button.png') no-repeat; background-size:100% 100%; height: 120rpx; top: 350rpx;color: #fff; font-size: 34rpx; line-height: 100rpx">立即评论</button>
  </navigator>
</view> 
