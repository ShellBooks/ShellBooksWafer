/* pages/searchResult/searchResult.wxss */
.searchItem{
  margin: 20rpx auto;
  width: 94%;
  height: 180rpx;
  padding: 10rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border-radius: 8rpx;
}
.bookimg{
  width: 20%;
  height: 180rpx;
  display: inline-block;
  vertical-align: top;
  margin-right: 40rpx;
}
.bookimg image{
  display: block;
  width: 100%;
  height: 100%;
}
.bookinfo{
  display: inline-block;
  vertical-align: top;
}
.bookinfo text{
  display: block;
  font-size: 28rpx;
  color: #444;
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.bookinfo .bookname{
  font-weight: bold;
  font-size: 34rpx;
  color: #000;
}