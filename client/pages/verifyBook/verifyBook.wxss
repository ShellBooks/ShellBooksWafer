/* pages/verifyBook/verifyBook.wxss */
.bookItem{
  margin: 20rpx 20rpx;
  padding: 10rpx 10rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border-radius: 8rpx;
}
.bookimg{
  width: 30%;
  display: inline-block;
  vertical-align: text-top;
  margin-right: 20rpx;
}
.bookimg image{
  display: block;
  width: 100%;
  height: 310rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
  border-radius: 8rpx;
}
.bookinfo{
  display: inline-block;
  vertical-align: top;
  width: 65%;
}
.bookinfo text{
  display: block;
  font-size: 26rpx;
}

.bookinfo .bookname{
  font-weight: bold;
  font-size: 30rpx;
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.verify_info{
   margin-top: 30rpx;
}
/* .shell{
  display: inline-block;
} */
.verify_info text{
  font-size: 26rpx;
  font-weight: bold;
  color: #1a7bae;
  display: inline-block;
  vertical-align: top;
  line-height: 60rpx;
}
.verify_info input{
  width: 140rpx;
  /* width: 30%; */
  height: 56rpx;
  display: inline-block;
  vertical-align: top;  
  border: 1px solid #aaa;
  border-radius: 999px;
  padding-left: 8rpx;
  padding-right: 8rpx;
}
/* navbar 下方滑块 */
.shell-navbar_slider{
  background: #1a7bae;
  width: 50rpx; 
  height: 2px;
  bottom: 10rpx;
  border: 0.5px solid #1a7bae;
  border-radius: 999px; 
}
/* navbar 选中 item  */
.shell-bar_item_on{
   color: #1a7bae !important; 
}
/* navbar */
#weui_navbar_design{
  position: fixed;
  top: 0;
  background: #fff;
  border-bottom: 0px;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
/* navbar 文字 */
#weui_navbar_title_design{
  font-weight: bold;
  font-size: 30rpx; 
}
.verifyBookInfo{
  padding: 10rpx 0;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
.pass_btn{
  width: 170rpx;
  height: 60rpx;
  display: inline-block;
  margin-left: 20rpx;
  border-radius: 999px;
  background: #1a7bae;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}
.back_btn{
  width: 170rpx;
  height: 60rpx;
  display: inline-block;
  margin-top: 40rpx;
  border-radius: 999px;
  background: #1a7bae;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}
.author{
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.publish{
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.btn_close{
  position: relative;
  top: -310rpx;
  height: 24rpx;
  width: 24rpx;
  float: right;
}
