/* pages/verifyBook/verifyBook.wxss */
.bookItem{
  margin: 40rpx 20rpx;
}
.bookimg{
  width: 30%;
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
}
.bookimg image{
  width: 100%;
  height: 300rpx;
}
.bookinfo{
  display: inline-block;
  vertical-align: top;
  width: 65%;
}
.bookinfo text{
  display: block;
  font-size: 36rpx;
}
.bookinfo text{
  font-size: 30rpx;
}
.bookinfo .bookname{
  font-weight: bold;
  font-size: 34rpx;
}
.shell{
  width: 100%;
}
.shell text{
  width: 26%;
  display: inline-block;
  vertical-align: top;
}
.shell input{
  width: 30%;
  height: 12rpx;
  display: inline-block;
  vertical-align: top;  
  border: 1px solid #aaa;
  border-radius: 999px;
}
/* navbar 下方滑块 */
.shell-navbar_slider{
  background: #1a7bae;
  width: 50rpx; 
  height: 2px;
  bottom: 10rpx;
  border: 0.5px solid #1a7bae;
  border-radius: 999px; 
}
/* navbar 选中 item  */
.shell-bar_item_on{
   color: #1a7bae !important; 
}
/* navbar */
#weui_navbar_design{
  border: none;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
/* navbar 文字 */
#weui_navbar_title_design{
  font-weight: bold;
  font-size: 30rpx; 
}
.verifyBookInfo{
  padding: 20rpx 0;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef; 
}
.pass_btn button{
  width: 280rpx;
  height: 70rpx;
  border-radius: 999px;
  background: #1a7bae;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
