/* pages/book_detailsy/book_details.wxss */
page{
  background: #fff;
}
.book_details_img{
  height: 430rpx;
  width: 35%;
  display: inline-block;
  vertical-align: top;
}
.book_details_img image{
  width: 100%;
  height: 100%;
  display: block;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border-radius: 8rpx;
}
.book_details_main{
  background: #fff;
  padding: 30rpx 20rpx 30rpx 20rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
}
.book_details_info{
  height: 430rpx;
  width: 45%;
  display: inline-block;
  margin-left: 40rpx;
}
.book_details_text{
  display: block;
  width: 100%;
  font-size: 30rpx;
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.book_name{
  font-size: 36rpx;
  font-weight: bold;
  width: 80%;
}

.borrow_book_btn{
  /* width: 100%;
  position: fixed;  
  bottom: 0;    */
  width: 280rpx;
  height: 70rpx;
  border-radius: 999px;
  background: #1a7bae;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  margin: 16rpx 0;
}
.book_detail_favourite{
  width: 52rpx;
  height: 48rpx;
  float: right;
}
.nocomment{
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #999;
  display: block;
  width: 100%;
  margin: 100rpx 0;
}
.tag{
  display: block;
  text-align: center;
  font-size: 32rpx;
  padding-bottom: 8rpx;
  background: #fff;
}
.comments{
  width: 100%;
  height: 570rpx;
}
.sign{
  margin: 0 auto;
  width: 50rpx;
  background: #1a7bae;
  height: 2rpx;
  border: 1px solid #1a7bae;
  border-radius: 999px;
}
.comments_number{
  height: 80rpx;
  padding: 10rpx 0;
}
.comments_main{
  height: 670rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  width: 100%;
}
.lineTag{
  height: 1px;
  background: #eee;
  width: 100%;
}
.comment_line{
  width: 88%;
  background: #eee;
  height: 1px;
  margin: 0 auto;
}



