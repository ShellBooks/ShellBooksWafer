/* pages/book_detailsy/book_details.wxss */
page{
  background: #eee;
}
.book_details_img{
  height: 400rpx;
  width: 35%;
  float: left;
  padding-left: 20rpx;
  padding-top: 50rpx;
}
.book_details_img image{
  width: 100%;
  height: 96%;
  margin: 0 auto;
  display: block;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
}
.book_details_main{
  display: inline-block;
  width: 100%;
  background: #fff;
  padding: 30rpx 0;
}
.book_details_info{
  height: 400rpx;
  width: 50%;
  padding-left: 10rpx;
  float: right;
  padding-right: 40rpx;
}
.book_details_text{
  display: block;
  width: 100%;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}
.book_name{
  font-size: 40rpx;
  font-weight: bold;
}
.comments_number{
  margin: 20rpx 0;
}
.borrow_book_btn{
  width: 100%;
   position: fixed;  
    bottom: 0;   
}
.book_detail_favourite{
  width: 52rpx;
  height: 48rpx;
  float: right;
  padding-right: 20rpx;
}
.nocomment{
  text-align: center;
  display: block;
  width: 100%;
  margin: 100rpx 0;
}