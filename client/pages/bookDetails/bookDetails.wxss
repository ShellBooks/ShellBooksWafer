/* pages/book_detailsy/book_details.wxss */
page{
  background: #fff;
}
.book_details_img{
  height: 430rpx;
  width: 35%;
  float: left;
  padding-left: 20rpx;
  padding-top: 30rpx;
}
.book_details_img image{
  width: 100%;
  height: 100%;
  display: block;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
  border-radius: 8rpx;
}
.book_details_main{
  display: inline-block;
  width: 100%;
  background: #fff;
  padding: 20rpx 10rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
}
.book_details_info{
  height: 400rpx;
  width: 45%;
  float: right;
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.book_details_text{
  display: block;
  width: 100%;
  font-size: 30rpx;
}
.book_name{
  font-size: 36rpx;
  font-weight: bold;
  width: 80%;
}
.comments_number{
  margin: 20rpx 0;
}
.borrow_book_btn{
  width: 100%;
  position: fixed;  
  bottom: 0;   
}
.book_detail_favourite{
  width: 52rpx;
  height: 48rpx;
  float: right;
  margin-top: 30rpx;
  margin-right: 30rpx;
  
}
.nocomment{
  text-align: center;
  display: block;
  width: 100%;
  margin: 100rpx 0;
}
#book_detail_author{
  overflow: hidden;   
  white-space: nowrap;  /**表示文本不换行*/
  text-overflow: ellipsis;    /**表示省略*/
}
.tag{
  display: block;
  text-align: center;
  font-size: 36rpx;
  padding-bottom: 8rpx;
  background: #fff;
}
.comments{
  padding: 20rpx 10rpx 40rpx 10rpx;
  box-shadow: 0 0 0 1px #eee,
    0 1px 2px 1px #efefef;
}
