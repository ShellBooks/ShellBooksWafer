.comment{
  width: 100%;
  height: 250rpx;
  display: flex;
  background: #fff;
  padding: 20rpx 0;
}
.avatar{
  width: 20%;
  height: 100%;
}
.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
}
.main{
  width: 80%;
  height: 100%;
}
.nickname{
  display: inline-block;
}
.rate{
  display: inline-block;
}
.rate image{
  width: 30rpx;
  height: 30rpx;
}
.date{
  display: block;
}
.content{
  display: block;
}